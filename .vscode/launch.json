{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "program": "${workspaceDir}/node_modules/gulp/bin/gulp.js",
            "args": [ "test" ],
            "cwd": "${workspaceDir}",
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "outFiles": ["${workspaceDir}/out/**/*.js"]
        },
        // Since debugging is difficult when using npm link from the project that consumes this extension, here's a workaround.
        // Replace the paths below with the paths to your own project.
        {
            "name": "launch node-debug2",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",

            // These paths are only valid for my particular setup! You need to replace them with your own.
            "cwd": "${workspaceDir}/../vscode-node-debug2",
            "program": "${workspaceDir}/../vscode-node-debug2/out/src/nodeDebug.js",
            "args": [ "--server=4712" ],
            "outFiles": ["${workspaceDir}/out/**/*.js"],
            "internalConsoleOptions": "openOnSessionStart",
            "smartStep": true
        },
        {
            "name": "launch chrome-debug",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",

            // These paths are only valid for my particular setup! You need to replace them with your own.
            "cwd": "${workspaceDir}/../vscode-chrome-debug",
            "program": "${workspaceDir}/../vscode-chrome-debug/out/bundle.js",
            "args": [ "--server=4712" ],
            "outFiles": ["${workspaceDir}/out/**/*.js"],
            "internalConsoleOptions": "openOnSessionStart",
            "smartStep": true
        },
        {
            "name": "Debug gulpfile",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",

            "cwd": "${workspaceDir}",
            "program": "${workspaceDir}/node_modules/.bin/gulp",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}