{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES6",
        "sourceMap": true,
        "outDir": "out",
        "declaration": true,

        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "crdp/**/*.ts",
        "node_modules/@types/**/*.ts"
    ]
}
