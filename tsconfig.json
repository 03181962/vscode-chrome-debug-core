{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "target": "ES6",
        "sourceMap": true,
        "outDir": "out",
        "declaration": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true
    },
    "exclude": [
        "node_modules",
        "!node_modules/@types",
        "lib"
    ]
}
