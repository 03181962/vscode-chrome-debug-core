        {
            "name": "launch as server",
            "type": "node",
            "request": "launch",
            "cwd": "C:/users/roblo/.vscode/extensions/vscode-chrome-debug",
            "program": "C:/users/roblo/.vscode/extensions/vscode-chrome-debug/out/src/chromeDebug.js",
            "runtimeArgs": ["--harmony"],
            "stopOnEntry": false,
            "args": [ "--server=4712" ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out"
        }
    ]
